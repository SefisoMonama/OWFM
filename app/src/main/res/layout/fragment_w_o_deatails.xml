<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="za.co.owfm.UI.WO.WODetailsFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/workOrderDetails_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:backgroundTint="@color/white"
        android:elevation="10dp"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        android:minHeight="?attr/actionBarSize"
        android:textAlignment="center"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:title="Details (WO)" />

    <ImageView
        android:id="@+id/metaWeave_imageView"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:src="@drawable/metaweave_logo"
        app:layout_constraintTop_toBottomOf="@id/workOrderDetails_toolbar"
        app:layout_constraintStart_toStartOf="@id/workOrderDetails_toolbar"
        app:layout_constraintEnd_toEndOf="@id/workOrderDetails_toolbar"
        android:layout_marginTop="8dp"/>

    <View
        android:id="@+id/firsthorizontal_view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/lightGrey"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/metaWeave_imageView" />

    <LinearLayout
        android:id="@+id/imageView_linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/firsthorizontal_view">

        <ImageView
            android:id="@+id/signature_ImageView"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_round_corners_shape"
            android:src="@drawable/signature" />

        <ImageView
            android:id="@+id/camera_ImageView"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_round_corners_shape"
            android:src="@drawable/camera" />

        <ImageView
            android:id="@+id/assets_ImageView"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_round_corners_shape"
            android:src="@drawable/dark_background" />

        <ImageView
            android:id="@+id/timeManagement_ImageView"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_round_corners_shape"
            android:src="@drawable/mw_time" />

        <ImageView
            android:id="@+id/coordinates_ImageView"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_round_corners_shape"
            android:src="@drawable/google_maps" />
    </LinearLayout>
    <View
        android:id="@+id/secondhorizontal_view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/lightGrey"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView_linearLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>