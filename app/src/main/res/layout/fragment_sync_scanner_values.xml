<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SyncScannerValuesFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/syncScannerValues_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:backgroundTint="@color/white"
        android:elevation="10dp"
        android:minHeight="?attr/actionBarSize"
        android:textAlignment="center"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Sync Scanner Values" />

    <ImageView
        android:id="@+id/metaWeave_imageView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/metaweave_logo"
        app:layout_constraintTop_toBottomOf="@id/syncScannerValues_toolbar"
        app:layout_constraintEnd_toEndOf="@id/syncScannerValues_toolbar"
        app:layout_constraintStart_toStartOf="@id/syncScannerValues_toolbar"
        android:layout_marginTop="12dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>