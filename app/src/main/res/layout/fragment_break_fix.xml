<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="za.co.owfm.UI.BreakFixFragment">

    <androidx.appcompat.widget.Toolbar
    android:id="@+id/breakFix_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    android:backgroundTint="@color/white"
    android:elevation="10dp"
    android:minHeight="?attr/actionBarSize"
    android:textAlignment="center"
    android:theme="?attr/actionBarTheme"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:title="Break Fix"/>

    <ImageView
        android:id="@+id/metaWeave_imageView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/metaweave_logo"
        app:layout_constraintTop_toBottomOf="@id/breakFix_toolbar"
        app:layout_constraintEnd_toEndOf="@id/breakFix_toolbar"
        app:layout_constraintStart_toStartOf="@id/breakFix_toolbar"
        android:layout_marginTop="12dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>