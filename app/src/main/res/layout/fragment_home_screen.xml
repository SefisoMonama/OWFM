<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".HomeScreenFragment">

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:id="@+id/sideDrawer_navigationView"
        app:headerLayout="@layout/sidedrawer_header"
        app:menu="@menu/side_drawer"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/home_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:backgroundTint="@color/white"
            android:elevation="10dp"
            android:minHeight="?attr/actionBarSize"
            android:textAlignment="center"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:logo="@drawable/owfm_radiotower"
            app:menu="@menu/home_menu_item"
            app:title="Home" />

        <TextView
            android:id="@+id/userfullname_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:paddingEnd="8dp"
            android:elevation="8dp"
            android:paddingStart="8dp"
            android:text="Casper Cloete"
            android:textAlignment="center"
            android:textSize="18sp"
            android:background="@drawable/btn_round_corners_shape"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_toolbar" />

        <LinearLayout
            android:id="@+id/network_linearlayout"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="24dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="24dp"
            app:layout_constraintEnd_toEndOf="@+id/userfullname_textview"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userfullname_textview">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingEnd="12dp"
                android:text="@string/network" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:paddingEnd="12dp"
                android:src="@drawable/network_on" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:paddingStart="12dp"
                android:src="@drawable/gps_on" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/server_linearlayout"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:paddingStart="24dp"
            app:layout_constraintEnd_toEndOf="@+id/network_linearlayout"
            app:layout_constraintStart_toStartOf="@+id/network_linearlayout"
            app:layout_constraintTop_toBottomOf="@id/network_linearlayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingEnd="12dp"
                android:text="Server   :" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:paddingEnd="12dp"
                android:src="@drawable/network_off" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:paddingStart="12dp"
                android:src="@drawable/camera_on" />
        </LinearLayout>

        <View
            android:id="@+id/firsthorizontal_view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="24dp"
            android:background="@color/lightGrey"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/server_linearlayout" />

        <ImageView
            android:id="@+id/sideDrawerIcon_ImageView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:src="@drawable/ic_baseline_menu_24"
            app:layout_constraintBottom_toBottomOf="@+id/workOrderMenuItem_linearLayout"
            app:layout_constraintStart_toStartOf="@id/firsthorizontal_view"
            app:layout_constraintTop_toTopOf="@+id/workOrderMenuItem_linearLayout"
            app:tint="@color/black" />

        <LinearLayout
            android:id="@+id/workOrderMenuItem_linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@id/firsthorizontal_view"
            app:layout_constraintTop_toBottomOf="@id/firsthorizontal_view">

            <ImageButton
                android:id="@+id/sync_ImageView"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:background="@drawable/btn_round_corners_shape"
                android:src="@drawable/btn_sync_all" />

            <ImageButton
                android:id="@+id/refresh_imageView"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/btn_refresh_all" />

        </LinearLayout>

        <View
            android:id="@+id/secondhorizontal_view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:background="@color/lightGrey"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sideDrawerIcon_ImageView" />

        <TextView
            android:id="@+id/workOder_textView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Work Orders:"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
            app:layout_constraintStart_toStartOf="@+id/secondhorizontal_view"
            app:layout_constraintTop_toTopOf="@+id/linearLayout" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@id/secondhorizontal_view"
            app:layout_constraintTop_toBottomOf="@id/secondhorizontal_view">

            <ImageView
                android:id="@+id/addOrder_ImageView"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:contentDescription="@string/add_order"
                android:src="@drawable/add_work_order" />

            <ImageView
                android:id="@+id/deleteOrder_imageView"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_marginStart="8dp"
                android:contentDescription="Delete order"
                android:src="@drawable/basket"
                app:tint="@color/lightGrey" />

        </LinearLayout>


        <TableLayout
            android:id="@+id/wordOrderFieldHeads_linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:stretchColumns="1"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout"
            app:layout_constraintStart_toStartOf="@+id/workOder_textView"
            app:layout_constraintTop_toBottomOf="@id/workOder_textView">

            <!-- Table heading -->
            <TableRow >

                <TextView
                    android:id="@+id/workOrderHead_tableHeading"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:background="@drawable/tableborder_shape"
                    android:text="WORK ORDER"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/summary_tableHeading"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:background="@drawable/tableborder_shape"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="SUMMARY"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/statusHead_tableHeading"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:background="@drawable/tableborder_shape"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="STATUS"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </TableRow>

            <!-- Table data -->
            <TableRow android:id="@+id/table_data">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:drawableStart="@drawable/icons8_tools_18"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="WO27507"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:maxEms="10"
                    android:text="Connection testing"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                    android:text="@string/summary"
                    android:textColor="@color/black"/>
            </TableRow>
        </TableLayout>

        <View
            android:id="@+id/thirdhorizontal_view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="200dp"
            android:background="@color/lightGrey"
            android:orientation="horizontal"
            app:flow_verticalBias="0.7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <TextView
            android:id="@+id/scanOrder_textView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Scan Orders:"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/Scans_linearLayout"
            app:layout_constraintStart_toStartOf="@+id/thirdhorizontal_view"
            app:layout_constraintTop_toTopOf="@+id/Scans_linearLayout" />

        <LinearLayout
            android:id="@+id/Scans_linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@id/thirdhorizontal_view"
            app:layout_constraintTop_toBottomOf="@id/thirdhorizontal_view">

            <ImageView
                android:id="@+id/scanOrder_ImageView"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:contentDescription="@string/add_order"
                android:src="@drawable/add_scan" />

            <ImageView
                android:id="@+id/deleteScanOrder_imageView"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_marginStart="8dp"
                android:contentDescription="Delete order"
                android:src="@drawable/basket"
                app:tint="@color/lightGrey" />

        </LinearLayout>

        <TextView
            android:id="@+id/noScans_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="No scans to display!"
            android:textColor="@color/lightGrey"
            app:layout_constraintEnd_toEndOf="@id/Scans_linearLayout"
            app:layout_constraintStart_toStartOf="@+id/scanOrder_textView"
            app:layout_constraintTop_toBottomOf="@+id/scanOrder_textView" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:src="@drawable/owfm_redbarcode_scanner"
            app:layout_constraintEnd_toEndOf="@+id/noScans_textView"
            app:layout_constraintStart_toStartOf="@+id/noScans_textView"
            app:layout_constraintTop_toBottomOf="@+id/noScans_textView" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:src="@drawable/metaweave_logo"
            app:layout_constraintBottom_toBottomOf="@+id/server_linearlayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/network_linearlayout"
            app:layout_constraintTop_toTopOf="@+id/network_linearlayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.drawerlayout.widget.DrawerLayout>