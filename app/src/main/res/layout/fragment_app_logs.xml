<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.AppLogsFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/appLogs_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:backgroundTint="@color/white"
        android:elevation="10dp"
        android:minHeight="?attr/actionBarSize"
        android:textAlignment="center"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="App Logs" />

    <ImageView
        android:id="@+id/metaWeave_imageView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/metaweave_logo"
        app:layout_constraintTop_toBottomOf="@id/appLogs_toolbar"
        app:layout_constraintEnd_toEndOf="@id/appLogs_toolbar"
        app:layout_constraintStart_toStartOf="@id/appLogs_toolbar"
        android:layout_marginTop="12dp"/>

    <LinearLayout
        android:id="@+id/bottomNav_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:id="@+id/bottom_navigation"
            android:layout_marginTop="24dp"
            android:elevation="20dp"
            app:labelVisibilityMode="labeled"
            android:layout_height="wrap_content"
            app:menu="@menu/bottom_nav_menu"/>
    </LinearLayout>

    <TextView
        android:id="@+id/appLogs_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="App Logs"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/bottomNav_linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/metaWeave_imageView" />
</androidx.constraintlayout.widget.ConstraintLayout>