<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="za.co.owfm.UI.WO.WOSignatureFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/workOrderSignature_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:backgroundTint="@color/white"
        android:elevation="10dp"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        android:minHeight="?attr/actionBarSize"
        android:textAlignment="center"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:title="Signature (WO)" />

    <ImageView
        android:id="@+id/metaWeave_imageView"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:src="@drawable/metaweave_logo"
        app:layout_constraintTop_toBottomOf="@id/workOrderSignature_toolbar"
        app:layout_constraintStart_toStartOf="@id/workOrderSignature_toolbar"
        app:layout_constraintEnd_toEndOf="@id/workOrderSignature_toolbar"
        android:layout_marginTop="8dp"/>
    <View
        android:id="@+id/firsthorizontal_view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/lightGrey"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/metaWeave_imageView" />

    <LinearLayout
        android:id="@+id/imageView_linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/firsthorizontal_view">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Work Order: "/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="TMPW03 "/>

    </LinearLayout>
    <View
        android:id="@+id/secondhorizontal_view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/lightGrey"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView_linearLayout" />


    <com.kyanogen.signatureview.SignatureView
        xmlns:sign="http://schemas.android.com/apk/res-auto"
        android:id="@+id/signature_view"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="12dp"
        android:elevation="16dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        sign:layout_constraintEnd_toEndOf="parent"
        sign:layout_constraintStart_toStartOf="parent"
        sign:layout_constraintTop_toBottomOf="@id/secondhorizontal_view"
        sign:penSize="5dp"
        sign:backgroundColor="#c1c1c1"
        sign:penColor="@color/black"
        sign:enableSignature="true"/>

    <ImageView
        android:id="@+id/signature_ImageView"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="@id/signature_view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/signature_view"
        app:layout_constraintTop_toBottomOf="@id/signature_view" />

    <View
        android:id="@+id/thirdHorizontal_view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/lightGrey"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signature_ImageView" />

    <Button
        android:id="@+id/saveUpdateSignature_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Save/Update"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/thirdHorizontal_view"
        app:layout_constraintStart_toStartOf="@+id/thirdHorizontal_view" />

    <Button
        android:id="@+id/clearSignature_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:text="Clear"
        app:layout_constraintBottom_toBottomOf="@+id/saveUpdateSignature_button"
        app:layout_constraintStart_toEndOf="@+id/saveUpdateSignature_button"
        app:layout_constraintTop_toTopOf="@+id/saveUpdateSignature_button" />

</androidx.constraintlayout.widget.ConstraintLayout>
