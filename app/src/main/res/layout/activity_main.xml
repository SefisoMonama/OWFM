<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/home_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:backgroundTint="@color/white"
        android:elevation="10dp"
        android:minHeight="?attr/actionBarSize"
        android:textAlignment="center"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:logo="@drawable/owfm_radiotower"
        app:menu="@menu/home_menu_item"
        app:title="Home" />

    <TextView
        android:id="@+id/userfullname_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Casper Cloete"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_toolbar" />

    <LinearLayout
        android:id="@+id/network_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:paddingStart="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userfullname_textview">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="12dp"
            android:text="@string/network" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:paddingEnd="12dp"
            android:src="@drawable/owfm_signal" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:paddingStart="12dp"
            android:src="@drawable/owfm_satelite_14" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/server_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:paddingStart="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/network_linearlayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="12dp"
            android:text="@string/network" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:paddingEnd="12dp"
            android:src="@drawable/owfm_signal" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:paddingStart="12dp"
            android:src="@drawable/owfm_satelite_14" />
    </LinearLayout>

    <View
        android:id="@+id/firsthorizontal_view"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/secondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/server_linearlayout"/>

    <ImageView
        android:id="@+id/sideDrawerIcon_ImageView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_baseline_menu_24"
        app:layout_constraintBottom_toBottomOf="@+id/workOrderMenuItem_linearLayout"
        app:layout_constraintStart_toStartOf="@id/firsthorizontal_view"
        app:layout_constraintTop_toTopOf="@+id/workOrderMenuItem_linearLayout"
        app:tint="@color/black" />

    <LinearLayout
        android:id="@+id/workOrderMenuItem_linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@id/firsthorizontal_view"
        app:layout_constraintTop_toBottomOf="@id/firsthorizontal_view">

        <ImageButton
            android:id="@+id/sync_ImageView"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:background="@color/mediumBlue"
            android:src="@drawable/owfm_sync"/>

        <ImageButton
            android:id="@+id/refresh_imageView"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:background="@color/mediumBlue"
            android:src="@drawable/owfm_refresh"/>

    </LinearLayout>

    <View
        android:id="@+id/secondhorizontal_view"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/secondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sideDrawerIcon_ImageView"/>

    <TextView
        android:id="@+id/workOder_textView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Work Orders:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/secondhorizontal_view"
        app:layout_constraintTop_toTopOf="@+id/linearLayout" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@id/secondhorizontal_view"
        app:layout_constraintTop_toBottomOf="@id/secondhorizontal_view">

        <ImageView
            android:id="@+id/addOrder_ImageView"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:contentDescription="@string/add_order"
            android:src="@drawable/owfm_add" />

        <ImageView
            android:id="@+id/deleteOrder_imageView"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            app:tint="@color/lightGrey"
            android:contentDescription="Delete order"
            android:src="@drawable/owfm_bin" />

    </LinearLayout>


    <TableLayout
        android:id="@+id/wordOrderFieldHeads_linearLayout"
        android:layout_width="0dp"
        android:stretchColumns="1"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/workOder_textView"
        app:layout_constraintTop_toBottomOf="@id/workOder_textView">

        <!-- Table heading -->
        <TableRow
            android:background="@color/skyBlue">
            <TextView
                android:id="@+id/workOrderHead_tableHeading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Work Order"
                android:textColor="@color/black"
                android:padding="10dp"
                android:textSize="14sp"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                />

            <TextView
                android:id="@+id/summary_tableHeading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Summary"
                android:textColor="@color/black"
                android:padding="10dp"
                android:textSize="14sp"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                />

            <TextView
                android:id="@+id/statusHead_tableHeading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textColor="@color/black"
                android:padding="10dp"
                android:textSize="14sp"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                />
        </TableRow>

        <!-- Table data -->
        <TableRow
            android:id="@+id/table_data">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Order Number"
                android:textColor="@color/black"
                android:padding="10dp"
                android:drawableStart="@drawable/icons8_tools_18"
                android:textSize="11sp"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="Order summary"
                android:textColor="@color/black"
                android:textSize="11sp" />

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="@string/summary"
                android:textColor="@color/black"
                android:textSize="10sp" />
        </TableRow>
    </TableLayout>

    <View
        android:id="@+id/thirdhorizontal_view"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="200dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/secondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <TextView
        android:id="@+id/scanOrder_textView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Scan Orders:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/Scans_linearLayout"
        app:layout_constraintStart_toStartOf="@+id/thirdhorizontal_view"
        app:layout_constraintTop_toTopOf="@+id/Scans_linearLayout" />

    <LinearLayout
        android:id="@+id/Scans_linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@id/thirdhorizontal_view"
        app:layout_constraintTop_toBottomOf="@id/thirdhorizontal_view">

        <ImageView
            android:id="@+id/scanOrder_ImageView"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:contentDescription="@string/add_order"
            android:src="@drawable/owfm_redbarcode_scanner" />

        <ImageView
            android:id="@+id/deleteScanOrder_imageView"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            app:tint="@color/lightGrey"
            android:contentDescription="Delete order"
            android:src="@drawable/owfm_bin" />

    </LinearLayout>

    <TextView
        android:id="@+id/noScans_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No scans to display!"
        android:layout_marginTop="24dp"
        android:textColor="@color/lightGrey"
        app:layout_constraintEnd_toEndOf="@id/Scans_linearLayout"
        app:layout_constraintStart_toStartOf="@+id/scanOrder_textView"
        app:layout_constraintTop_toBottomOf="@+id/scanOrder_textView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/noScans_textView"
        app:layout_constraintStart_toStartOf="@+id/noScans_textView"
        app:layout_constraintTop_toBottomOf="@+id/noScans_textView"
        android:src="@drawable/owfm_barcode_scanner"/>



</androidx.constraintlayout.widget.ConstraintLayout>